@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Long Running Jobs</h1>
</div>

<div class="row">
    <div class="col-md-6">
        <h2>Active</h2>
        <table>
            <thead>
                <tr>
                    <th style="min-width:160px">Id</th>
                    <th style="min-width:160px">State</th>
                    <th style="min-width:160px">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var job in ViewBag.ActiveJobs)
                {
                    <tr>
                        <td>@job.Id</td>
                        <td>@job.State</td>
                    </tr>
                }

            </tbody>
        </table>


    </div>
    <div class="col-md-6">
        <h2>Completed</h2>
    </div>
</div>